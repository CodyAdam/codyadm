---
import { CopyToClipboard } from './CopyToClipboard';
import IcBaselineDiscord from './ico/IcBaselineDiscord';
import MdiGithub from './ico/MdiGithub';
import SimpleIconsArtstation from './ico/SimpleIconsArtstation';
---

<div id='contact'></div>
<div class='mt-[20vw] overflow-hidden max-w-full min-h-[80vh] bg-primary'>
  <img
    alt='seperator gradient'
    src={"/sepxx.webp"}
    width={1000}
    class='absolute -translate-y-1/2 object-cover w-full rotate-180 select-none pointer-events-none'
    draggable='false'
  />
  <div class='text-base-100 pt-[10vw]'>
    <div class='flex flex-col items-center justify-center my-48 gap-10'>
      <div class='flex items-center justify-center gap-4 md:gap-6 px-4'>
        <p class='font-mono text-lg sm:text-xl md:text-2xl font-light leading-none my-10'>cody.ad4@gmail.com</p>
        <CopyToClipboard
          client:idle
          text='cody.ad4@gmail.com'
          className='h-5 md:h-6 w-5 md:w-6 shrink-0 text-primary-focus'
        />
      </div>
      <div class='flex md:gap-24 sm:gap-14 gap-7 items-center'>
        <a href='https://github.com/CodyAdam' target='_blank' rel='noopener noreferrer' class='group'>
          <MdiGithub
            className='h-16 w-16 group-hover:animate-pulse group-hover:-translate-y-4 group-hover:scale-110 transition-all'
          />
        </a>
        <a href='https://www.artstation.com/CodyAdam' target='_blank' rel='noopener noreferrer' class='group'>
          <SimpleIconsArtstation
            className='h-16 w-16 group-hover:animate-pulse group-hover:-translate-y-4 group-hover:scale-110 transition-all'
          />
        </a>
        <div class='tooltip tooltip-bottom tooltip-secontext-secondary hover:tooltip-open group' data-tip='Cody#5717'>
          <IcBaselineDiscord
            className='h-16 w-16 group-hover:animate-pulse group-hover:-translate-y-4 group-hover:scale-110 transition-all'
          />
        </div>
      </div>
    </div>
  </div>
</div>
