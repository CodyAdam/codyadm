---
import IcSharpChevronLeft from './ico/IcSharpChevronLeft';

type Props = {
  title?: String;
  className?: string;
  id: string;
};

const { title, id, className } = Astro.props;
---

<div class='drawer drawer-end h-fit'>
  <input id={'drawer-' + id} type='checkbox' class='drawer-toggle' />
  <div class='drawer-content'>
    <label for={'drawer-' + id} class={'drawer-button cursor-pointer'}>
      <div class={className}><slot /> <slot name='button' /></div>
    </label>
  </div>
  <div class='drawer-side overflow-hidden fixed inset-0 z-40 pointer-events-none'>
    <label for={'drawer-' + id} class='drawer-overlay'></label>
    <div
      class='flex flex-col transition-all px-10 pb-10 max-w-full lg:max-w-[50rem] w-full bg-base-100 text-base-content gap-10 z-50 overflow-y-auto'
    >
      <div class='sticky top-0 pt-10 pb-7 bg-base-100 border-b-2 border-base-content/20 z-10'>
        <div class='flex justify-between items-center gap-5'>
          <label for={'drawer-' + id} class='btn btn-circle btn-outline'>
            <IcSharpChevronLeft className='w-8 h-8' />
          </label>
          <h1 class='text-4xl font-display font-semibold'>{title}</h1>
        </div>
      </div>
      <div class='m-10 drawer-lazy-content'>
        <slot name='content' />
      </div>
    </div>
  </div>
</div>
